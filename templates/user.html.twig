<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome user{% endblock %}</title>
    {% block stylesheets %}
        <link  rel="stylesheet" type="text/css" media="screen" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"/>
    {% endblock %}

</head>
<div class="topcorner" ><a style='float:none' href="/user/logout">logout</a></div>
<body>

{% block body %}

<div class="jumbotron d-flex  align-items-center">
    <div class="container ">
        <div class="form-group row ">

            <div class="col-sm-12 ">
    {%- block form -%}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    {%- endblock form -%}
            </div>
        </div>
    </div>
</div>
    <div class="jumbotron d-flex  align-items-center">
        <div class="container">
            <div class="form-group row ">

                <div  class="col-sm-12 ">
                    <table class="table table-striped">
                        <tr>
                            <th>id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Url</th>
                            <th>Viewed<th>
                            <th>Favourite<th>
                        </tr>
                        {% for movie in movies %}
                            <tr>
                                <td>{{ movie.id}}</td>
                                <td>{{ movie.title}}</td>
                                <td>{{ movie.description}}</td>
                                <td>{{ movie.url}}</td>
                                <td ><input type="checkbox" value={{ movie.id}} id={{ movie.url }} onChange="set_check(this)" /></td>
                                <td ><input type="radio" id={{ movie.id}} value={{ movie.url }} onChange="set_check(this)" /></td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/jquery-1.7.1.min.js') }}"></script>
    <script src="{{ asset('js/checkbox.js') }}"></script>
    {% endblock %}
</body>
</html>

